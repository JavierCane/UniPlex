# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                                                  controllers.students.offers.Search.index()

# Offer details page
GET        /offer/:companyUrlize/:offerUrlize/:offerId        controllers.students.offers.Details.viewOfferDetails(companyUrlize: String, offerUrlize: String, offerId: Long)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                                      controllers.Assets.at(path="/public", file)